groups:
  - name: Node Monitoring
    rules:

    - alert: DegradedUptime
      expr: http_nymcollector_report_last_hour < 90
      labels:
        severity: critical
      annotations:
        description: 'The node uptime has declined under 90% in the last hour.'

    - alert: InstanceDown
      expr: up == 0
      for: 5m
      labels:
        severity: critical
      annotations:
        description: "Instance has been down for more than 1 minute."

    - alert: NodeInactive
      expr: rate(http_nymcollector_received_since_last_update[10m]) > 15
      labels:
        severity: minor
      annotations:
        description: 'The node is inactive.'

    - alert: NoPacketsMixed
      expr: increase(http_nymcollector_received_since_startup[10m]) == 0
      labels:
        severity: critical
      annotations:
        description: 'The node has not mixed any packets in last 10 minutes.'

    - alert: DegradedUptime
      expr: http_nymcollector_report_last_hour < 90
      labels:
        severity: critical
      annotations:
        description: 'The node uptime has declined under 90% in the last hour.'